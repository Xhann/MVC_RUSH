{% extends 'base.html.twig' %}

{% block body %}

<div class="text-center justify-content-center align-items-center row">
    <div class="col-md-6 col-sm-12 col-lg-4 mt-5">
        {% if msg != "" %}
        <div class="alert alert-success" role="alert">User has been {{msg}}</div>
        {% endif %}
        <form class="form-signin mt-5">
            <h1 class="h3 mb-3 font-weight-normal">Please log in</h1>
            <div class="form-group align-items-start">
                <label for="inputEmail" class="sr-only">Username</label>
                <input type="text" id="inputEmail" class="form-control" placeholder="Username" required autofocus>
            </div>
            <div class="form-group align-items-start">
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
            </div>
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            <p class="mt-5 mb-3 text-muted">&copy; 2017-2019</p>
        </form>
    </div>
</div>
{% endblock %}